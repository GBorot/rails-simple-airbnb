<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <p>You searched for <strong></strong>. We found 6 flats out of our 6 on our website.</p>
    </div>
  </div>


  <div class="col-4">
    <% @flats.each do |flat| %>
      <h4><%= link_to flat.name, flat_path(flat) %></h4>
        <br>
      <p><%= flat.address %></p>
        <br>
      <p><%= flat.number_of_guests %> <%= flat.price_per_night %></p>
    <% end %>
  </div>
</div>
